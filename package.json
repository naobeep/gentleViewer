{
  "name": "gentle-viewer",
  "version": "1.0.0",
  "description": "紳士的なファイル管理・閲覧ツール - タグベースのファイル管理とマルチフォーマット対応ビューワー",
  "author": {
    "name": "naobeep"
  },
  "homepage": "https://github.com/naobeep/gentleViewer",
  "license": "MIT",
  "main": "./dist/main/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "preinstall": "node -e \"if(!process.env.npm_config_unsafe_perm) process.exit(0)\" || true",
    "start": "electron-forge start",
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "copy:migrations": "powershell -Command \"New-Item -ItemType Directory -Force -Path resources\\\\migrations; Copy-Item -Path src\\\\main\\\\migrations\\\\* -Destination resources\\\\migrations\\\\ -Recurse -Force\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "7zip-bin": "^5.2.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "exifreader": "^4.32.0",
    "file-type": "^21.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "jszip": "^3.10.1",
    "kysely": "^0.28.8",
    "music-metadata": "^11.9.0",
    "node-7z": "^3.0.0",
    "p-limit": "^3.1.0",
    "pdfjs-dist": "^5.4.296",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-window": "^2.2.1",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.7",
    "unzipper": "^0.12.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-window": "^2.0.0",
    "@types/sqlite3": "^3.1.11",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "resources/migrations/"
        ]
      }
    }
  },
  "build": {
    "extraResources": [
      {
        "from": "resources/migrations/",
        "to": "resources/migrations/",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
