{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "types": ["node"]
  },
  "include": [
    "src/preload/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
