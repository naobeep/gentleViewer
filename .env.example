# アプリケーション設定
NODE_ENV=development
LOG_LEVEL=debug

# データベース設定
DB_NAME=gentle-viewer.db
DB_BACKUP_INTERVAL=3600000

# キャッシュ設定
CACHE_MAX_SIZE=1073741824
THUMBNAIL_MAX_SIZE=1048576

# パフォーマンス設定
MAX_CONCURRENT_SCANS=10
PRELOAD_PAGES=3

# セキュリティ設定（開発用）
# 本番環境では必ず変更してください
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# 外部サービス（オプション）
SENTRY_DSN=
UPDATE_SERVER_URL=

# デバッグ設定
DEBUG_DATABASE=false
DEBUG_IPC=false
DEBUG_FILE_WATCHER=false
